@page "{id:int}"
@model Assignment2PRN221_BlogPost.Pages.Admin.Blogs.EditModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Edit Blog Post</h1>
    </div>
</div>
<partial name="_Notification" />
<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="id" class="form-label">Id</label>
                <input type="text" required class="form-control" id="id" asp-for="BlogPost.Id" readonly>
                <span class="text-danger" asp-validation-for="BlogPost.Id"></span>
            </div>

            <div class="mb-3">
                <label for="heading" class="form-label">Heading</label>
                <input type="text" required class="form-control" id="heading" asp-for="BlogPost.Heading">
                <span class="text-danger" asp-validation-for="BlogPost.Heading"></span>
            </div>

            <div class="mb-3">
                <label for="pageTitle" class="form-label">Page Title</label>
                <input type="text" required class="form-control" id="pageTitle" asp-for="BlogPost.PageTitle">
                <span class="text-danger" asp-validation-for="BlogPost.PageTitle"></span>

            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" required id="content" asp-for="BlogPost.Content"></textarea>
                <span class="text-danger" asp-validation-for="BlogPost.Content"></span>

            </div>

            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description</label>
                <input type="text" required class="form-control" id="shortDescription" asp-for="BlogPost.ShortDescription">
                <span class="text-danger" asp-validation-for="BlogPost.ShortDescription"></span>

            </div>



            <div class="mb-3">
                <label for="featuredImageUrl" class="form-label">Featured Image Url</label>
                <input type="text" required class="form-control" id="featuredImageUrl" asp-for="BlogPost.ImageUrl">
                <span class="text-danger" asp-validation-for="BlogPost.ImageUrl"></span>

            </div>

            <div class="mb-3">
                <label for="urlHandle" class="form-label">Url Handle</label>
                <input type="text" required class="form-control" id="urlHandle" asp-for="BlogPost.UrlHandle">
                <span class="text-danger" asp-validation-for="BlogPost.UrlHandle"></span>

            </div>

            <div class="mb-3">
                <label for="publishedDate" class="form-label">Published Date</label>
                <input type="date" required class="form-control" id="publishedDate" asp-for="BlogPost.PublishedDate">
                <span class="text-danger" asp-validation-for="BlogPost.PublishedDate"></span>

            </div>

            <div class="mb-3">
                <label for="author" class="form-label">Account</label>
                <input type="text" required class="form-control" id="author" asp-for="BlogPost.Account.Name">
                <span class="text-danger" asp-validation-for="BlogPost.AccountId"></span>

            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="isVisible" @((Model.BlogPost.Visible == false ? "" : "checked")) >
                <label class="form-check-label" for="isVisible">
                    Is Visible
                </label>
            </div>
            
            <div class="mb-3 d-flex justify-content-between">
                <button class="btn btn-primary" type="submit" asp-page-handler="Edit">Submit</button>

                <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Delete</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        var editor = new FroalaEditor('#content');
    </script>
}