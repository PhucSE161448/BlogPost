@page
@model Assignment2PRN221_BlogPost.Pages.Admin.Blogs.ListModel
@{
}
<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Blog Posts</h1>
    </div>
</div>

<partial name="_Notification" />
@if (Model.Blogs != null && Model.Blogs.Any())
    {
        <div class="container">
            <table class="table">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Heading</td>
                        <td> </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blogPost in Model.Blogs)
                    {
                        <tr>
                            <td>@blogPost.Id</td>
                            <td>@blogPost.Heading</td>
                            <td><a href="/Admin/Blogs/Edit/@blogPost.Id">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="container">
            <p>No blog posts were found!</p>
        </div>
    }
